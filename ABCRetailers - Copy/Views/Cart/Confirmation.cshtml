@{
    ViewData["Title"] = "Order Confirmation";
    var orderId = ViewBag.OrderId as string;
}

<div class="text-center p-5 bg-light rounded-3 shadow-sm mt-5">
    <h1 class="display-3 text-success"><i class="fas fa-check-circle"></i> Order Placed!</h1>
    <p class="lead mt-4">
        Thank you for your purchase from ABC Retailers.
    </p>
    @if (!string.IsNullOrEmpty(orderId))
    {
        <p class="fs-4">
            Your order ID is: <code class="text-primary">@orderId</code>
        </p>
    }
    else
    {
        <p class="fs-4">
            Your order has been successfully submitted.
        </p>
    }
    <hr class="my-4">
    <a asp-controller="Home" asp-action="CustomerDashboard" class="btn btn-primary btn-lg">
        <i class="fas fa-tachometer-alt"></i> Go to Dashboard
    </a>
    <a asp-controller="Order" asp-action="MyOrders" class="btn btn-outline-primary btn-lg ms-2">
        <i class="fas fa-list-alt"></i> View My Orders
    </a>
</div>
