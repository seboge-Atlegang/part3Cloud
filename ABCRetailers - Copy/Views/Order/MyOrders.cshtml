@model IEnumerable<ABCRetailers.Models.Order>
@{
    ViewData["Title"] = "My Orders";
}

<h2><i class="fas fa-clipboard-list"></i> My Orders</h2>
<hr />

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Order ID</th>
                    <th>Order Date</th>
                    <th>Qty of Items</th>
                    <th>Total Amount</th>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.OrderByDescending(o => o.OrderDateUtc))
                {
                    <tr>
                        <td><code>@(order.Id?.Length > 8 ? order.Id[..8] + "…" : order.Id)</code></td>
                        <td>@(order.OrderDateUtc?.ToLocalTime().ToString("yyyy-MM-dd HH:mm") ?? "N/A")</td>

                        <td>@order.Quantity</td>
                        <td>@order.TotalAmount.ToString("C")</td>
                        <td><span class="badge bg-@(order.Status.ToString().ToLower() switch { "submitted" => "primary", "processing" => "info", "completed" => "success", "cancelled" => "danger", _ => "secondary" })">@order.Status</span></td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-info" title="Details">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> You have not placed any orders yet.
        <a asp-controller="Home" asp-action="Index" class="alert-link">Start shopping</a>!
    </div>
}