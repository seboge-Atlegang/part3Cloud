@model IEnumerable<ABCRetailers.Models.Order>
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-tachometer-alt"></i> Admin Dashboard</h2>
</div>
<hr />

<div class="alert alert-success">
    Welcome back, Admin! Use the links below to manage the store.
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-shopping-cart"></i> Manage Orders</h5>
                <p class="card-text">View and update all customer orders.</p>
                <a asp-controller="Order" asp-action="Index" class="btn btn-outline-light">Go to Orders</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card text-white bg-info">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-box"></i> Manage Products</h5>
                <p class="card-text">Add, edit, or delete product inventory.</p>
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-light">Go to Products</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card text-white bg-secondary">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-users"></i> Manage Users</h5>
                <p class="card-text">View and manage customer and staff accounts.</p>
                <a asp-controller="Customer" asp-action="Index" class="btn btn-outline-light">Go to Users</a>
            </div>
        </div>
    </div>
</div>

<h3 class="mt-4"><i class="fas fa-chart-line"></i> Quick Stats (Placeholder)</h3>
<div class="row">
    <div class="col-md-3">
        <div class="alert alert-warning text-center">
            <strong>125</strong> New Orders This Week
        </div>
    </div>
    <div class="col-md-3">
        <div class="alert alert-success text-center">
            <strong>R 15,450.00</strong> Sales Today
        </div>
    </div>
    <div class="col-md-3">
        <div class="alert alert-danger text-center">
            <strong>3</strong> Low Stock Items
        </div>
    </div>
    <div class="col-md-3">
        <div class="alert alert-info text-center">
            <strong>2</strong> Active Admins
        </div>
    </div>
</div>