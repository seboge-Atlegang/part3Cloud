@{
    ViewData["Title"] = "Customer Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user-circle"></i> Customer Dashboard</h2>
</div>
<hr />

<div class="alert alert-primary">
    Welcome back, @User.Identity.Name! Start your shopping or review your account details.
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title"><i class="fas fa-list-alt text-primary"></i> View My Orders</h5>
                <p class="card-text">Track the status and history of your purchases.</p>
                <a asp-controller="Order" asp-action="MyOrders" class="btn btn-primary">Go to Orders</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title"><i class="fas fa-shopping-basket text-success"></i> Continue Shopping</h5>
                <p class="card-text">Browse our latest products and deals.</p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-success">Shop Now</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title"><i class="fas fa-cog text-secondary"></i> Account Settings</h5>
                <p class="card-text">Update your profile, address, or password.</p>
                <a asp-controller="Customer" asp-action="Edit" class="btn btn-secondary">Manage Profile</a>
            </div>
        </div>
    </div>
</div>
